<div class="container">
  <div class="d-flex justify-content-between">
    <h2><%= "Lists (#{@lists.length})" %></h2>
    <p class="btn btn-white"> <%= link_to "Create a new list", new_list_path %> </p>
  </div>
  <div class="lists">
    <% @lists.each do |list|%>
      <%= link_to list_path(list) do %>
        <% if list.photo.attached? %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <% else  %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80);">
        <% end %>
            <h2>  <%= list.name %> </h2>
          </div>
      <% end %>
    <% end %>
  </div>
</div>



